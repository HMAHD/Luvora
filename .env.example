# ===========================================
# Luvora Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control!

# ===========================================
# Application
# ===========================================
NEXT_PUBLIC_APP_URL=https://luvora.love
NEXT_PUBLIC_APP_VERSION=1.0.0

# ===========================================
# PocketBase Database
# ===========================================
# The public URL of your PocketBase instance
NEXT_PUBLIC_POCKETBASE_URL=http://127.0.0.1:8090
POCKETBASE_ADMIN_EMAIL=admin@example.com
POCKETBASE_ADMIN_PASSWORD=your-admin-password

# ===========================================
# Lemon Squeezy (Payments)
# ===========================================
# Webhook secret from Lemon Squeezy dashboard
LEMONSQUEEZY_WEBHOOK_SECRET=your-webhook-secret

# Store and API configuration
LEMONSQUEEZY_STORE_ID=your-store-id
LEMONSQUEEZY_API_KEY=your-api-key

# Product variant IDs for each tier
LEMONSQUEEZY_HERO_VARIANT_ID=your-hero-variant-id
LEMONSQUEEZY_LEGEND_VARIANT_ID=your-legend-variant-id

# ===========================================
# Premium Pool Secret
# ===========================================
# Used for hashing premium spark selection
PREMIUM_POOL_SECRET=change-this-to-a-long-random-string

# ===========================================
# Admin Access
# ===========================================
# Comma-separated list of admin user IDs and emails
NEXT_PUBLIC_ADMIN_UUIDS=user-id-1,user-id-2
NEXT_PUBLIC_ADMIN_EMAILS=admin@example.com

# ===========================================
# Messaging Integrations (User-Managed)
# ===========================================
# Encryption key for bot tokens (generate with: node -e "console.log(crypto.randomBytes(32).toString('hex'))")
ENCRYPTION_KEY=

# DEPRECATED - Old centralized messaging (remove after migration)
# TELEGRAM_BOT_TOKEN=your-telegram-bot-token
# TELEGRAM_WEBHOOK_SECRET=your_random_secret_token_here
# WHAPI_API_TOKEN=your-whapi-token
# WHAPI_API_URL=https://gate.whapi.cloud

# ===========================================
# Email (SMTP for transactional emails)
# ===========================================
# SendPulse, Resend, or any SMTP provider
SMTP_HOST=smtp-pulse.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@luvora.love
SMTP_FROM_NAME=Luvora

# ===========================================
# Cron Jobs
# ===========================================
# Secret for authenticating cron job requests
# Generate: openssl rand -hex 32
CRON_SECRET=your-cron-secret

# ===========================================
# Sentry Error Tracking (Phase 12)
# ===========================================
# Your Sentry DSN from dashboard
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_SENTRY_ENVIRONMENT=production

# For CI/CD and release tracking
SENTRY_AUTH_TOKEN=your_sentry_auth_token
SENTRY_ORG=your-org-name
SENTRY_PROJECT=luvora

# ===========================================
# Google Analytics 4
# ===========================================
# Get your Measurement ID from GA4 Admin > Data Streams
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# GA4 Measurement Protocol (for server-side tracking)
# Create an API secret in GA4 Admin > Data Streams > Measurement Protocol API secrets
GA_API_SECRET=your-ga4-api-secret

# ===========================================
# Google AdSense
# ===========================================
# Get your client ID from AdSense dashboard
NEXT_PUBLIC_ADSENSE_CLIENT=ca-pub-XXXXXXXXXX

# AdSense Ad Slots (create in AdSense > Ads > By ad unit)
NEXT_PUBLIC_ADSENSE_SLOT_BANNER=1234567890
NEXT_PUBLIC_ADSENSE_SLOT_INTERSTITIAL=0987654321

# ===========================================
# Security
# ===========================================
# Allowed domains for CORS (comma-separated)
ALLOWED_ORIGINS=https://luvora.love,https://staging.luvora.love

# Session secret (for any session-based auth)
# Generate: openssl rand -hex 32
SESSION_SECRET=your_session_secret_here

# ===========================================
# Development & Debugging
# ===========================================
DEBUG=false
NODE_ENV=production
